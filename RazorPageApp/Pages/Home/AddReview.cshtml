@page
@using RazorPageApp.Pages.Home
@model RazorPageApp.Pages.Home.AddReviewModel
@{
    ViewData["Title"] = "AddReview";
}

<div class="form-horizontal">
    <form method="post">
        @Html.ValidationSummary(false, null, new { @class = "text-danger h4" })
        <!-- Input and Submit elements -->
        <input name="Data.BookId" type="hidden" value="@Model.Data?.BookId" />
        @*We need these in case where there is an error and we need to reshow the data again*@
        <input name="Data.Title" type="hidden" value="@Model.Data?.Title" />

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Book Title</label>
            </div>
            <div class="col-sm-10">
                @Model.Data?.Title
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Your Name</label>
            </div>
            <input asp-for="Data.VoterName" class="form-control col-sm-10" />
            <span asp-validation-for="Data.VoterName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Grade (0 to 5)</label>
            </div>
            <input asp-for="Data.NumStars" min="0" max="5" class="form-control col-sm-10" />
            <span asp-validation-for="Data.NumStars" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Your comment</label>
            </div>
            <textarea asp-for="Data.Comment" class="form-control col-sm-10"></textarea>
            <span asp-validation-for="Data.Comment" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit">Add Review</button>
            </div>
        </div>

    </form>
</div>

