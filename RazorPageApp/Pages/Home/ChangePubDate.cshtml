@page
@using Home
@model Home.ChangePubDateModel
@{
    ViewData["Title"] = "ChangePubDate";
}

<h2>Change Publication Date</h2>
<div class="form-horizontal">
    <form method="post">
        @Html.ValidationSummary(false, null, new { @class = "text-danger h4" })
        <!-- Input and Submit elements -->
        <input name="Data.BookId" type="hidden" value="@Model.Data?.BookId" />
        @*We need these in case where there is an error and we need to reshow the data again*@
        <input name="Data.Title" type="hidden" value="@Model.Data?.Title" />

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Book Title</label>
            </div>
            <div class="col-sm-10">
                @Model.Data?.Title
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Publication Date</label>
            </div>
            <input asp-for="Data.PublishedOn" class="form-control col-sm-10" />
            <span asp-validation-for="Data.PublishedOn" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit">Update</button>
            </div>
        </div>

    </form>
</div>

