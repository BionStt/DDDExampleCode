@page
@model RazorPageApp.Pages.Home.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-danger">Delete this Book?</h2>
<form method="post">
    @Html.ValidationSummary(true, null, new { @class = "text-danger h4" })
    <!-- Input and Submit elements -->
    <input name="Data.BookId" type="hidden" value="@Model.Data?.BookId" />
    @*We need these in case where there is an error and we need to reshow the data again*@
    <input name="Data.Title" type="hidden" value="@Model.Data?.Title" />
    <input name="Data.AuthorsOrdered" type="hidden" value="@Model.Data?.AuthorsOrdered" />

    @if (Model.Data?.Title != null)
    {
        <h3>@Model.Data?.Title</h3>
        <div>
            <small>by</small>&nbsp;@Model.Data?.AuthorsOrdered
        </div>
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit">DELETE</button>
        </div>
    </div>
</form>


