@page
@using System.Globalization
@using Home
@model Home.RemovePromotionModel
@{
    ViewData["Title"] = "RemovePromotion";
}

<h2>Remove price promotion</h2>
<div class="form-horizontal">
    <form method="post">
        @Html.ValidationSummary(true, null, new { @class = "text-danger h4" })
        <!-- Input and Submit elements -->
        <input name="Data.BookId" type="hidden" value="@Model.Data?.BookId" />
        @*We need these in case where there is an error and we need to reshow the data again*@
        <input name="Data.Title" type="hidden" value="@Model.Data?.Title" />
        <input name="Data.OrgPrice" type="hidden" value="@Model.Data?.OrgPrice" />
        <input name="Data.ActualPrice" type="hidden" value="@Model.Data?.ActualPrice" />
        <input name="Data.PromotionalText" type="hidden" value="@Model.Data?.PromotionalText" />

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Book Title</label>
            </div>
            <div class="col-sm-10">
                @Model.Data?.Title
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Org Price</label>
            </div>
            <div class="col-sm-10">
                @(Model.Data?.OrgPrice < 0 ? "Not for sale" : Model.Data?.OrgPrice.ToString("c", new CultureInfo("en-US")))
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Promotional price</label>
            </div>
            <div class="col-sm-10">
                @(Model.Data?.ActualPrice < 0 ? "Not for sale" : Model.Data?.ActualPrice.ToString("c", new CultureInfo("en-US")))
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Promotional Text</label>
            </div>
            <div class="col-sm-10">
                @Model.Data?.PromotionalText
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit">Remove</button>
            </div>
        </div>

    </form>
</div>


